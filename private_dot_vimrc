" Disable compatibility with vi which can cause unexpected issues
set nocompatible

" Download vim-plug if needed
let data_dir = has('nvim') ? stdpath('data') . '/site' : '~/.vim'
if empty(glob(data_dir . '/autoload/plug.vim'))
    silent execute '!curl -fLo '.data_dir.'/autoload/plug.vim --create-dirs https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim'
    autocmd VimEnter * PlugInstall --sync | source $MYVIMRC
endif

" Use space as the leader key
nnoremap <SPACE> <Nop>
let mapleader="\<SPACE>"

" Plugins
call plug#begin()

" sneak.vim
Plug 'justinmk/vim-sneak'
let g:sneak#label = 1
let g:sneak#s_next = 1
let g:sneak#use_ic_scs = 1

" VimTex
Plug 'lervag/vimtex', { 'tag': 'v2.15' }
let g:vimtex_view_method = 'zathura'

" Vim Sleuth
Plug 'tpope/vim-sleuth'

" tComment
Plug 'tomtom/tcomment_vim'

" Tokyo Night Color Scheme
Plug 'folke/tokyonight.nvim'

" Vim Airline
Plug 'vim-airline/vim-airline'
Plug 'vim-airline/vim-airline-themes'

let g:airline#extensions#tabline#enabled = 1
let g:airline#extensions#tabline#formatter = 'unique_tail'
set noshowmode

" Vim Repeat (Use the dot key to repeat plugin actions)
Plug 'tpope/vim-repeat'

" Vim Easy Align
Plug 'junegunn/vim-easy-align'
xmap ga <Plug>(EasyAlign)
nmap ga <Plug>(EasyAlign)

" Vim GitGutter
Plug 'airblade/vim-gitgutter'
set updatetime=100

" csv.vim
Plug 'chrisbra/csv.vim'

call plug#end()

" Turn on file type detection
filetype plugin indent on

" Enable spell check
set spell

" Add numbers to each line on the left-hand side
set number
set relativenumber

" Don't redraw screen while executing macros
set lazyredraw

" Use space characters instead of tabs and display tab as four spaces
set expandtab
set tabstop=4

" Do not wrap lines by default
set nowrap

" Do incremental searching
set incsearch

" Enable conceal syntax (works great for VimTex)
set conceallevel=1

" Show a few lines of context around the cursor
set scrolloff=3

" Use indent fold method, but do not automatically fold anything at file start
set foldmethod=indent
set foldlevelstart=99

" Display white space characters
set list
let &listchars = "tab:├─ ,lead:·,multispace:␣,trail:␣,extends:»,precedes:«,nbsp:‡"
let &showbreak = "↪\ "

" Cursor highlighting
highlight CursorLine cterm=NONE ctermbg=0
set cursorline

if has('nvim')
    " Terminal mode disable spell check
    autocmd TermOpen * setlocal nospell

    " Set color scheme
    colorscheme tokyonight-night
    let g:airline_theme="wombat"
endif

" Exits insert mode in terminal mode
" To send escape to the emulated terminal, use <C-\><Esc>
tnoremap <Esc> <C-\><C-N>

" Don't use Ex mode, use Q for formatting
noremap Q gq

" Easier movement between windows
nnoremap <C-j> <C-W>j
nnoremap <C-k> <C-W>k
nnoremap <C-h> <C-W>h
nnoremap <C-l> <C-W>l
tnoremap <C-j> <C-\><C-N><C-W>j
tnoremap <C-k> <C-\><C-N><C-W>k
tnoremap <C-h> <C-\><C-N><C-W>h
tnoremap <C-l> <C-\><C-N><C-W>l

